{
  "name": "@ionic/angular-toolkit",
  "version": "4.0.0",
  "description": "Schematics and builders for @ionic/angular apps.",
  "homepage": "https://ionicframework.com/",
  "author": "Ionic Team <hi@ionicframework.com> (https://ionicframework.com)",
  "scripts": {
    "lint": "npm run eslint",
    "fmt": "npm run eslint -- --fix",
    "eslint": "eslint . --ext .ts",
    "build": "tsc",
    "watch": "tsc -w",
    "prepublishOnly": "npm run build",
    "cz": "git-cz"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ionic-team/angular-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/ionic-team/angular-toolkit/issues"
  },
  "keywords": [
    "angular",
    "Angular CLI",
    "blueprints",
    "code generation",
    "devkit",
    "schematics",
    "ionic",
    "ionic framework",
    "ionicframework"
  ],
  "dependencies": {
    "@schematics/angular": "^12.0.0",
    "cheerio": "1.0.0-rc.3",
    "colorette": "1.1.0",
    "copy-webpack-plugin": "^6.2.1",
    "tapable": "^2.1.1",
    "tslib": "^2.0.3",
    "ws": "^7.0.1"
  },
  "devDependencies": {
    "@angular-devkit/architect": "^0.1200.0",
    "@angular-devkit/build-angular": "^12.0.1",
    "@angular-devkit/core": "^12.0.1",
    "@angular-devkit/schematics": "^12.0.0",
    "@angular/compiler": "^12.0.0",
    "@angular/compiler-cli": "^12.0.0",
    "@ionic/eslint-config": "^0.3.0",
    "@ionic/prettier-config": "^1.0.1",
    "@semantic-release/changelog": "^3.0.0",
    "@semantic-release/git": "^7.0.4",
    "@semantic-release/github": "^5.0.6",
    "@semantic-release/npm": "^5.0.4",
    "@types/cheerio": "0.22.15",
    "@types/copy-webpack-plugin": "^6.0.0",
    "@types/karma": "3.0.5",
    "@types/node": "10.12.30",
    "@types/tapable": "1.0.4",
    "@types/webpack": "^4.41.22",
    "@types/webpack-dev-server": "^3.1.7",
    "@types/webpack-sources": "^2.0.0",
    "@types/ws": "^7.2.1",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.1.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^4.0.10",
    "karma": "^6.3.2",
    "lint-staged": "^10.0.4",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.1",
    "semantic-release": "^15.9.17",
    "typescript": "4.2.4",
    "typescript-eslint-language-service": "^4.1.3"
  },
  "peerDependencies": {
    "@angular-devkit/architect": "^0.1200.0",
    "@angular-devkit/schematics": "^12.0.0"
  },
  "builders": "./builders.json",
  "schematics": "./collection.json",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "release": {
    "branch": "stable",
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/github",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/github",
      "@semantic-release/npm"
    ],
    "success": [
      "@semantic-release/github"
    ],
    "fail": [
      "@semantic-release/github"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": "@ionic/prettier-config",
  "eslintConfig": {
    "root": true,
    "ignorePatterns": [
      "node_modules",
      "**/*.d.ts",
      "schematics/**/files"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "@ionic/eslint-config/recommended"
    ],
    "rules": {
      "prettier/prettier": "error"
    }
  }
}
