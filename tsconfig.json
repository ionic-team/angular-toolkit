{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "baseUrl": ".",
    "declaration": false,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "pretty": true,
    "preserveSymlinks": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018",
    "lib": ["es2018", "dom"],
    "plugins": [{ "name": "typescript-eslint-language-service" }]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/__tests__/*.ts", "schematics/*/files"]
}
